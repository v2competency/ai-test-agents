# Application URL
# Migrated from: env.baseurl property
BASE_URL=https://www.imdex.com

# Platform Configuration
# Migrated from: platform property
# Note: In Playwright, use --project flag instead
# npm run test:desktop or npm run test:mobile
PLATFORM=desktop

# Browser Settings
# Migrated from: headless property in chrome capabilities
HEADLESS=false

# Anthropic API Key (for AI-powered self-healing)
# NEW: Not available in original Selenium framework
ANTHROPIC_API_KEY=your-api-key-here

# Environment
NODE_ENV=test

# Timeouts (milliseconds)
# Migrated from: selenium.wait.timeout = 30000
DEFAULT_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Feature Flags
# Self-healing capabilities (replaces Healenium)
ENABLE_SELF_HEALING=true
ENABLE_AI_OBSERVER=true

# Retry Configuration
# Migrated from: retry.count = 0
RETRY_COUNT=0

# Screenshot Configuration
# Migrated from: selenium.success.screenshots = 1
SCREENSHOT_ON_SUCCESS=false
SCREENSHOT_ON_FAILURE=true
