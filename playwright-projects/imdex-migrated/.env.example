# =============================================================================
# IMDEX PLAYWRIGHT TEST CONFIGURATION
# Migrated from: QAF application.properties
# =============================================================================

# Base URL for the application under test
# Original: env.baseurl=https://www.imdex.com
BASE_URL=https://www.imdex.com

# =============================================================================
# AI SELF-HEALING CONFIGURATION (Optional)
# =============================================================================

# Anthropic API Key for AI-powered self-healing
# Required for Tier 3 (AI Visual) and Tier 4 (AI DOM) healing
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Enable/disable AI healing features
AI_HEALING_ENABLED=true

# AI Model to use for element detection
AI_MODEL=claude-sonnet-4-20250514

# =============================================================================
# TEST EXECUTION SETTINGS
# =============================================================================

# Run in CI mode (enables retries, disables parallel)
CI=false

# Default browser for tests
DEFAULT_BROWSER=chromium

# Headless mode (true for CI, false for local debugging)
HEADLESS=true

# =============================================================================
# TIMEOUT SETTINGS
# Original: selenium.wait.timeout=60000
# =============================================================================

# Navigation timeout in milliseconds
NAVIGATION_TIMEOUT=60000

# Action timeout in milliseconds
ACTION_TIMEOUT=30000

# Expect/assertion timeout in milliseconds
EXPECT_TIMEOUT=10000

# =============================================================================
# REPORTING SETTINGS
# =============================================================================

# Screenshot on failure
SCREENSHOT_ON_FAILURE=true

# Video recording (off | on | retain-on-failure | on-first-retry)
VIDEO_MODE=on-first-retry

# Trace collection (off | on | retain-on-failure | on-first-retry)
TRACE_MODE=on-first-retry

# =============================================================================
# SELF-HEALING SETTINGS
# =============================================================================

# Enable healing cache
HEALING_CACHE_ENABLED=true

# Maximum fallback attempts before AI healing
MAX_FALLBACK_ATTEMPTS=5

# Save healing reports
SAVE_HEALING_REPORTS=true

# Healing report output directory
HEALING_REPORT_DIR=reports/healing
